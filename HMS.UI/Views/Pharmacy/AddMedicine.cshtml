@model HMS.Entity.Models.Pharmacy

@{
    ViewData["Title"] = "AddMedicine";
}
<form method="post" enctype="multipart/form-data">
    <h1>Pharmacy Details</h1>
</form>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMedicine">
            <div class="form-group">
                <label asp-for="MedicineName" class="control-label"></label>
                <input asp-for="MedicineName" class="form-control" />
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineIssue" class="control-label"></label>
                <input asp-for="MedicineIssue" class="form-control" />
                <span asp-validation-for="MedicineIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineTime" class="control-label"></label>
                <input asp-for="MedicineTime" class="form-control" />
                <span asp-validation-for="MedicineTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="pharmacyStock" class="control-label"></label>
                <input asp-for="pharmacyStock" class="form-control" />
                <span asp-validation-for="pharmacyStock" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (ViewBag.status == "Ok")
            {
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </form>
    </div>
</div>
<div>
    <a asp-action="PharmacyIndex">Back to List</a>
</div>